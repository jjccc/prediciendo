<div class="row no-horizontal-margin {{background_class}} prediction">
  {{#is_pending}}
    <div class="col-lg-12">
      <p>{{{description}}}</p>
    </div>
    <div class="col-lg-8">
      <span class="due-date">{{due_date}}</span>
    </div>
    <div class="col-lg-4">
      <span class="socials pull-right">
        <a class="twitter-share" href="#" alt="Compartir en Twitter" title="Compartir en Twitter" remote="true"><img src="{{twitter_icon}}"></a>
        <a class="facebook-share" href="#" alt="Compartir en Facebook" title="Compartir en Facebook" remote="true"><img src="{{facebook_icon}}"></a>
        <!--<a class="email-share" href="#" alt="Enviar por correo electr贸nico" title="Enviar por correo electr贸nico" remote="true"><img src="{{email_icon}}"></a>-->
        <input class="url-value" type="hidden" value="{{url}}">
        <input class="tweet-value" type="hidden" value="{{tweet}}">
      </span>
    </div>
  {{/is_pending}}
  {{^is_pending}}
    <div class="col-lg-11">
        <p>{{{description}}}</p>        
      {{^is_success}}
        <p class="text-danger"><b>La realidad</b></p>
        <p class="text-danger">{{{result}}}</p>
      {{/is_success}}
    </div>
    <div class="col-lg-1">
      {{#is_success}}
        <span class="glyphicon glyphicon-thumbs-up text-success thumb"></span>
      {{/is_success}}
      {{^is_success}}
        <span class="glyphicon glyphicon-thumbs-down text-danger thumb"></span>
      {{/is_success}}
    </div>
    <div class="col-lg-12 {{^is_success}}pull-right{{/is_success}}">
      <span class="socials pull-right">
        <a class="twitter-share" href="#" alt="Compartir en Twitter" title="Compartir en Twitter" remote="true"><img src="{{twitter_icon}}"></a>
        <a class="facebook-share" href="#" alt="Compartir en Facebook" title="Compartir en Facebook"  remote="true"><img src="{{facebook_icon}}"></a>
        <!--<a class="email-share" href="#" alt="Enviar por correo electr贸nico" title="Enviar por correo electr贸nico" remote="true"><img src="{{email_icon}}"></a>-->
        <input class="url-value" type="hidden" value="{{url}}">
        <input class="tweet-value" type="hidden" value="{{tweet}}">
      </span>
    </div>
  {{/is_pending}}
</div>
{{#is_admin}}
  <div class="row tools no-horizontal-margin">
    <div class="col-lg-2 no-horizontal-padding pull-right">
      <a class="btn btn-primary btn-xs" href="{{{edit_path}}}">
        <span class="glyphicon glyphicon-pencil"></span>
      </a>
      <a class="btn btn-primary btn-xs" href="{{{delete_path}}}">
        <span class="glyphicon glyphicon-trash"></span>
      </a>
    </div>
  </div>
{{/is_admin}}
