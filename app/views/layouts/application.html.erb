    <![endif]-->
  </head>
  <body>

    <div class="container">
      <%= render "layouts/header" %>
      <%= yield %>
      
      <div class="footer no-horizontal-padding">
        <p>&copy; prediciendo.com <%= Date.today.year %></p>
      </div>
    </div>
    
    <%= render "layouts/ganalytics" unless Rails.env.development? %>
